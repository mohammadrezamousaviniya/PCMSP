@model PCMSP_MVC.Models.NewsModel
@{
    ViewBag.Title = "News_Details";
    Layout = "~/Views/masters/webMaster.cshtml";
}


<!-- Breadcrumbs -->

<div class="container">
    <div class="row">
        <div class="breadcrumbs-wrap inline-items with-border">
            <a href="#" class="btn btn--transparent btn--round">
                <svg class="TSHPanda-icon TSHPanda-icon-home-icon-silhouette"><use xlink:href="#TSHPanda-icon-home-icon-silhouette"></use></svg>
            </a>

            <ul class="breadcrumbs">
                <li class="breadcrumbs-item">
                    <a href="@Url.Action("Index","Media")">صفحه اصلی</a>
                    <svg class="TSHPanda-icon TSHPanda-icon-media-play-symbol"><use xlink:href="#TSHPanda-icon-media-play-symbol"></use></svg>
                </li>
                <li class="breadcrumbs-item active">
                    <span>اخبار</span>
                    <svg class="TSHPanda-icon TSHPanda-icon-media-play-symbol"><use xlink:href="#TSHPanda-icon-media-play-symbol"></use></svg>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- ... end Breadcrumbs -->

<div class="container">
    <div class="row">

        <!-- Sidebar-->

        <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
            <aside aria-label="sidebar" class="sidebar sidebar-right">

                <aside class="widget w-search">
                    <h5 class="widget-title">Search form</h5>
                    <form method="get">
                        <div class="with-icon">
                            <input name="name" placeholder="پس از نوشتن ، Enter را بزنید " type="text">
                            <svg class="TSHPanda-icon TSHPanda-icon-search"><use xlink:href="#TSHPanda-icon-search"></use></svg>
                        </div>
                    </form>
                </aside>

                <aside class="widget w-about">
                    <div class="site-logo">
                        <a href="index-2.html" class="full-block"></a>
                        <img src="img/logo.png" alt="TSHPanda">
                        <div class="logo-text">
                            <div class="logo-title">TSHPanda</div>
                            <div class="logo-sub-title">app startup</div>
                        </div>
                    </div>

                    <p>
                        Claritas est etiam processus dynamicus, qui sequitur mutationem consuetudium lectorum. Mirum est
                        notare quam littera gothica, putamus parum claram, anteposuerit formas.
                    </p>

                    <a href="index-2.html" class="btn btn-border btn--with-shadow c-primary">
                        read more
                    </a>
                </aside>

                <aside class="widget w-category">
                    <h5 class="widget-title">Categories</h5>
                    <ul class="category-list">
                        <li>
                            <a href="#">
                                Entrepreneur
                                <span class="cat-count">39</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Innovation
                                <span class="cat-count">632</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Startup
                                <span class="cat-count">8</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Strategy
                                <span class="cat-count">24</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Tech
                                <span class="cat-count">2</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Marketing
                                <span class="cat-count">16</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                Trends
                                <span class="cat-count">9</span>
                            </a>
                        </li>
                    </ul>
                </aside>

                <aside class="widget w-latest-news">
                    <h5 class="widget-title">Latest News</h5>

                    <ul class="latest-news-control" role="tablist">

                        <li role="presentation" class="tab-control active">
                            <a href="#latest" role="tab" data-toggle="tab" class="control-item">اخیر</a>
                        </li>

                        <li role="presentation" class="tab-control">
                            <a href="#popular" role="tab" data-toggle="tab" class="control-item">محبوب</a>
                        </li>

                    </ul>

                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="latest">
                            <ul class="latest-news-list">
                                @*latest*@
                               

                            </ul>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="popular">
                            <ul class="latest-news-list">
                                @*popular*@
                               

                            </ul>
                        </div>

                    </div>


                </aside>






                <aside class="widget w-tags">
                    <h5 class="widget-title">Categories</h5>
                    <ul class="tags-list">
                        <li>
                            <a href="#">App</a>
                        </li>
                        <li>
                            <a href="#">WordPress</a>
                        </li>
                        <li>
                            <a href="#">UI Kit</a>
                        </li>
                        <li>
                            <a href="#">Innovation</a>
                        </li>
                        <li>
                            <a href="#">Trends</a>
                        </li>
                        <li>
                            <a href="#">Startup</a>
                        </li>
                        <li>
                            <a href="#">Marketing</a>
                        </li>
                        <li>
                            <a href="#">WordPress Themes</a>
                        </li>
                    </ul>
                </aside>


            </aside>
        </div>

        <!-- End Sidebar-->
        <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
            <article class="hentry post post-standard has-post-thumbnail sticky post-standard-details">

                <div class="post-thumb">
                    <img src="@Model.ImagePath" alt="post">
                </div>

                <div class="post__content">

                    <a href="#" class="social__item main">
                        <svg class="TSHPanda-icon TSHPanda-icon-1496680146-share"><use xlink:href="#TSHPanda-icon-1496680146-share"></use></svg>
                    </a>

                    <div class="share-product">

                        <ul class="socials">
                            <li>
                                <a href="#" class="social__item facebook">
                                    <svg class="TSHPanda-icon" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="1.414"><path d="M15.117 0H.883C.395 0 0 .395 0 .883v14.234c0 .488.395.883.883.883h7.663V9.804H6.46V7.39h2.086V5.607c0-2.066 1.262-3.19 3.106-3.19.883 0 1.642.064 1.863.094v2.16h-1.28c-1 0-1.195.48-1.195 1.18v1.54h2.39l-.31 2.42h-2.08V16h4.077c.488 0 .883-.395.883-.883V.883C16 .395 15.605 0 15.117 0" fill-rule="nonzero"></path></svg>
                                </a>
                            </li>

                            <li>
                                <a href="#" class="social__item twitter">
                                    <svg class="TSHPanda-icon" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="1.414"><path d="M16 3.038c-.59.26-1.22.437-1.885.517.677-.407 1.198-1.05 1.443-1.816-.634.37-1.337.64-2.085.79-.598-.64-1.45-1.04-2.396-1.04-1.812 0-3.282 1.47-3.282 3.28 0 .26.03.51.085.75-2.728-.13-5.147-1.44-6.766-3.42C.83 2.58.67 3.14.67 3.75c0 1.14.58 2.143 1.46 2.732-.538-.017-1.045-.165-1.487-.41v.04c0 1.59 1.13 2.918 2.633 3.22-.276.074-.566.114-.865.114-.21 0-.41-.02-.61-.058.42 1.304 1.63 2.253 3.07 2.28-1.12.88-2.54 1.404-4.07 1.404-.26 0-.52-.015-.78-.045 1.46.93 3.18 1.474 5.04 1.474 6.04 0 9.34-5 9.34-9.33 0-.14 0-.28-.01-.42.64-.46 1.2-1.04 1.64-1.7z" fill-rule="nonzero"></path></svg>
                                </a>
                            </li>

                            <li>
                                <a href="#" class="social__item googlePlus">
                                    <svg class="TSHPanda-icon" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="1.414"><path d="M8.16 6.857V9.6h4.537c-.183 1.177-1.37 3.45-4.537 3.45-2.73 0-4.96-2.26-4.96-5.05s2.23-5.05 4.96-5.05c1.554 0 2.594.66 3.19 1.233l2.17-2.092C12.126.79 10.32 0 8.16 0c-4.423 0-8 3.577-8 8s3.577 8 8 8c4.617 0 7.68-3.246 7.68-7.817 0-.526-.057-.926-.126-1.326H8.16z"></path></svg>
                                </a>
                            </li>

                            <li>
                                <a href="#" class="social__item rss">
                                    <svg class="TSHPanda-icon" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="1.414"><path d="M12.8 16C12.8 8.978 7.022 3.2 0 3.2V0c8.777 0 16 7.223 16 16h-3.2zM2.194 11.61c1.21 0 2.195.985 2.195 2.196 0 1.21-.99 2.194-2.2 2.194C.98 16 0 15.017 0 13.806c0-1.21.983-2.195 2.194-2.195zM10.606 16h-3.11c0-4.113-3.383-7.497-7.496-7.497v-3.11c5.818 0 10.606 4.79 10.606 10.607z" /></svg>
                                </a>
                            </li>
                        </ul>

                    </div>

                    <div class="post__date">

                        <time class="published" datetime="2017-03-20 12:00:00">
                            <a href="#" class="number">@Model.day</a>
                            <span class="month">@Model.year_month</span>
                            <span class="day">@Model.DayOfWeek</span>
                        </time>

                    </div>

                    <div class="post__content-info">

                        <h3 class="post__title entry-title">@Model.title</h3>

                        <div class="post-additional-info">
                            <span class="post__author author vcard">
                                توسط
                                <a href="#" class="fn">@Model.by</a>
                            </span>
                            <span class="category">
                                در گروه
                                <a href="@Url.Action("News","Media")">اخبار</a>
                            </span>
                            <span class="post__comments">
                                <a href="#">@Model.Comments__ <span>نظرات</span></a>
                            </span>
                        </div>

                    </div>
                    <div>
                        @Html.Raw(@Model.text)

                    </div>
                </div>
            </article>




            <div class="pagination-arrow">

                <a href="#" class="btn-prev-wrap">
                    <div class="btn-prev">
                        <svg class="TSHPanda-icon icon-hover TSHPanda-icon-arrow-left-1"><use xlink:href="#TSHPanda-icon-arrow-left-1"></use></svg>
                        <svg class="TSHPanda-icon TSHPanda-icon-arrow-left1"><use xlink:href="#TSHPanda-icon-arrow-left1"></use></svg>
                    </div>
                    <div class="btn-content">
                        <div class="btn-content-title">Next Post</div>
                        <p class="btn-content-subtitle">Standard Post Format...</p>
                    </div>
                </a>

                <a class="list-post" href="#">
                    <svg class="TSHPanda-icon TSHPanda-icon-menu-1"><use xlink:href="#TSHPanda-icon-menu-1"></use></svg>
                </a>

                <a href="#" class="btn-next-wrap">
                    <div class="btn-content">
                        <div class="btn-content-title">Previous Post</div>
                        <p class="btn-content-subtitle">Video Post Format...</p>
                    </div>
                    <div class="btn-next">
                        <svg class="TSHPanda-icon icon-hover TSHPanda-icon-arrow-right-1"><use xlink:href="#TSHPanda-icon-arrow-right-1"></use></svg>
                        <svg class="TSHPanda-icon TSHPanda-icon-arrow-right1"><use xlink:href="#TSHPanda-icon-arrow-right1"></use></svg>
                    </div>
                </a>

            </div>



            <div class="comments">

                <div class="d-flex--content-inline">
                    <h3>@Model.Comments.Count.ToString() نظر</h3>

                    <a href="#" class="btn btn--green">
                        <span class="text">Leave a Comment</span>
                    </a>
                </div>

                <ol class="comments__list">
                    @foreach (var comment in @Model.Comments)
                    {
                        @Html.Partial("_Comment", comment)
                    }

                </ol>

                <form class="form-validate contact-form leave-reply" method="post">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <h3>Leave a Comment</h3>
                    </div>

                    <div class="row">

                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            <div class="with-icon">
                                <input name="name" placeholder="Your Name" type="text">
                                <svg class="TSHPanda-icon TSHPanda-icon-user"><use xlink:href="#TSHPanda-icon-user"></use></svg>
                            </div>
                        </div>
                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                            <div class="with-icon">
                                <input name="email" placeholder="Email Adress" type="text">
                                <svg class="TSHPanda-icon TSHPanda-icon-message-closed-envelope-1"><use xlink:href="#TSHPanda-icon-message-closed-envelope-1"></use></svg>
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="with-icon">
                                <textarea name="message" class="" required="" placeholder="Your Message" style="min-height: 160px;"></textarea>
                                <svg class="TSHPanda-icon TSHPanda-icon-edit"><use xlink:href="#TSHPanda-icon-edit"></use></svg>
                            </div>
                        </div>

                        <div class="submit-block">
                            <div class="col-lg-4">
                                <a href="#" class="btn btn--large btn--green btn--with-shadow full-width">
                                    <span class="text">Submit</span>
                                </a>
                            </div>
                            <div class="col-lg-8">
                                <div class="submit-block-text">
                                    You may use these HTML tags and attributes: <span>
                                        &lt;a href="" title=""&gt; &lt;abbr title=""&gt; &lt;acronym title=""&gt;
                                        &lt;b&gt; &lt;blockquote cite=""&gt; &lt;cite&gt; &lt;code&gt; &lt;del datetime=""&gt;
                                        &lt;em&gt; &lt;i&gt; &lt;q cite=""&gt; &lt;strike&gt; &lt;strong&gt;
                                    </span>
                                </div>
                            </div>

                        </div>

                    </div>
                </form>
            </div>


        </div>



    </div>
</div>
